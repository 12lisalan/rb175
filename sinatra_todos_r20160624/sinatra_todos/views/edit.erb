<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <form class="delete" action="/lists/<%= @id %>/delete" method="post">
        <button type="submit" class="delete">Delete List</button>
      </form>
    </ul>
  </header>
</session>

<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @name %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Update">
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>